{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["vinxi/types/client"],
    "isolatedModules": true,
    "paths": {
      "@src/*": ["./src/*"],
      "ace.config": ["ace.config.js"],
      "@ace/*": ["./.ace/fundamentals/*"],
    }
  },
  "include": [
    "src/**/*",
    ".ace/**/*"
  ]
}
